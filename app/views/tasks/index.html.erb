<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <%= link_to 'Logout', logout_path, method: :delete %>
  <h1>タスク一覧</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>

  <%= link_to '新規タスクの投稿', new_task_path %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
        </p><%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %></p>
        </p><%= link_to 'login now!', login_path, class: 'btn btn-lg btn-primary' %></p>
    </div>
  </div>
<% end %>